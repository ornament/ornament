[{
    "tag": "input",
    "attributes": {
        "type": "text",
        "data-role": {
            "fields": [
                ["name"]
            ]
        },
        "value": "foo"
    }
}, {
    "tag": "#text",
    "value": "\n"
}, {
    "tag": "textarea",
    "attributes": {
        "name": "message",
        "id": "myMessage",
        "cols": "30",
        "rows": "10"
    }
}, {
    "tag": "#text",
    "value": "\n"
}, {
    "tag": "button",
    "attributes": {
        "class": "btn btn-primary"
    },
    "children": [{
        "tag": "#text",
        "value": "Click me!"
    }]
}, {
    "tag": "#text",
    "value": "\n"
}, {
    "tag": "div",
    "attributes": {
        "class": "alert alert-info"
    },
    "children": [{
        "tag": "#text",
        "value": "\n    This is a message. Read me.\n"
    }]
}, {
    "tag": "#text",
    "value": "\n"
}, {
    "tag": "small",
    "attributes": {
        "class": {
            "fields": [["active"]],
            "expression": "'item ' + (helpers.read(this, 'active') ? 'active' : '');"
        },
        "data-id": {
            "fields": [["id"]],
            "expression": "'item-' + helpers.read(this, 'id');"
        }
    }
}]
